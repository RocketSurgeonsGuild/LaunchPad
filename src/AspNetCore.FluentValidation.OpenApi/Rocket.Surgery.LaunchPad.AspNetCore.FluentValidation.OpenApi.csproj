<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <PackageDescription>
            The goal of this package is be a minimal and experimental implementation of open api
            integration of fluent validation for aspnet core
        </PackageDescription>
        <PackageTags>fluentvalidation,openapi</PackageTags>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="FluentValidation.AspNetCore" />
        <PackageReference Include="Microsoft.AspNetCore.OpenApi" />
        <InternalsVisibleTo Include="AspNetCore.FluentValidation.OpenApi.Tests" />
    </ItemGroup>
</Project>